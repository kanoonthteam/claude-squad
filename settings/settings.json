{
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Task"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/protect-definitions.sh $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "PIPELINE_CONFIG": ".claude/pipeline/config.json",
    "TASK_BOARD": "tasks.json"
  }
}
